<h4>Add a task</h4>

<%= form_for [user, item] do |f| %>
  <form class="form-inline">
    <div class="form-group">
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter a new task", autofocus: true %>
    </div>
    <div class="form-group">
      <%= f.submit "Submit Task", class: 'btn btn-default pull-right' %>
    </div>
  </form>
<% end %>
