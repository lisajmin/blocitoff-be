<tbody id='item-<%= item.id %>'>
  <tr>
    <td><%= item.name %></td>
    <td class="text-center"><%= distance_of_time_in_words(item.created_at, Time.now)%> ago </td>
    <% if current_user.id == user.id %>
      <td class="text-center task-complete"><%= link_to "", user_item_path(user.id, item.id), method: :delete, class: 'glyphicon glyphicon-unchecked', remote: true %></td>
    <% end %>
  </tr>
</tbody>
