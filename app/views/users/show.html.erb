<div class="container">
  <div class="container">
    <% if flash[:success] %>
      <div class="alert alert-success"><%= flash[:success] %></div>
    <% elsif flash[:alert] %>
      <div class="alert alert-danger"><%= flash[:alert] %></div>
    <% end %>
  </div>

  <h1><%= @user.email %>'s todo list</h1>
  <% if current_user == nil %>
  <% elsif current_user.id == @user.id %>
    <div class="container">
      <%= render partial: 'items/form', locals: { user: @user, item: @item } %>
    </div>
  <% end %>

  <div class="container">
    <h4>Here are the tasks that need to be completed:</h4>
    <table class="table table-hover">
      <thead>
        <tr>
          <th style="width:70%">Description</th>
          <th class="text-center">Created</th>
          <th class="text-center">Complete</th>
        </tr>
      </thead>
      <% @items.each do |item| %>
        <%= render partial: 'items/item', locals: { user: @user, item: item }%>
      <% end %>
    </table>
  </div>

</div>
