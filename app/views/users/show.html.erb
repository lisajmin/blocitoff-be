<div class="container">
  <h1>Hey, <%= @user.email %></h1>
  <% if current_user == nil %>
  <% elsif current_user.id == @user.id %>
    <div class="container">
      <%= render partial: 'items/form', locals: { user: @user, item: @item } %>
    </div>
  <% end %>
  <div class="container">
    <% if flash[:success] %>
      <p class="text-success"><%= flash[:success] %></p>
    <% elsif flash[:alert] %>
      <p class="text-danger"><%= flash[:alert] %></p>
    <% end %>
  </div>

<div class="container">
  <h4>Here are the tasks that need to be completed:</h4>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Description</th>
      </tr>
    </thead>
    <% @items.each do |item| %>
      <%= render partial: 'items/item', locals: { item: item }%>
      <% end %>
    </table>
  </div>

</div>
